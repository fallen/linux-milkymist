/dts-v1/;

/ {
	#address-cells = <1>;
	#size-cells = <1>;
	model = "One";
	compatible = "milkymist,one";

	cpus {
		#address-cells = <1>;
		#size-cells = <0>;

		cpu@0 {
			device_type = "cpu";
			compatible = "lattice,mico32";
			reg = <0>;
			clock-frequency = <80000000>;	/* 80 MHz */
			i-cache-line-size = <16>;
			d-cache-line-size = <16>;
			i-cache-size = <4096>;
			d-cache-size = <4096>;

			pic: pic {
				#interrupt-cells = <1>;
				#address-cells = <0>;
				compatible = "lattice,mico32-pic";
				interrupt-controller;
			};
		};
	};

	memory@40000000 {
		device_type = "memory";
		reg = <0x40000000 0x08000000>;	/* 128MB */
	};

	flash@0 {
		compatible = "cfi-flash";
		reg = <0x80000000 0x02000000>;	/* 32MB */
		bank-width = <4>;
		device-width = <1>;
		#address-cells = <1>;
		#size-cells = <1>;
		partition@0 {
			label = "bitstream";
			reg = <0x00000000 0x00180000>;
			read-only;
		};
		partition@180000 {
			label = "unused";
			reg = <0x000a0000 0x02360000>;
			read-only;
		};
	};

	csr-bus@e0000000 {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges = <0x0 0xe0000000 0x100000>;
		compatible = "milkymist,csr-bus";

		uart@0 {
			device_type = "serial";
			compatible = "milkymist,uart";
			clock-frequency = <80000000>;
			reg = <0x0 0x1000>;
			interrupts = <0>;
			interrupt-parent = <&pic>;
		};

		ethernet@8000 {
			#address-cells = <1>;
			#size-cells = <0>;
			compatible = "milkymist,minimac2";
			reg = <0x8000 0x1000>;
			interrupts = <10 11>;
			interrupt-parent = <&pic>;

			phy0: ethernet-phy@0 {
				device_type = "ethernet-phy";
				reg = <0>;
				phy = <&phy0>;
				local-mac-address = [ 00 00 00 00 00 00 ];
			};
		};
	};
	chosen {
		bootargs = "root=/dev/ram0 rootfstype=ext2";
	};
};
